<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.letit0or1.akimaleo.notesqwe.view.create.CreateNoteActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="368dp"
        android:layout_height="35dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/arrow_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
            android:tint="@color/textBody" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/arrow_back"
            android:layout_toRightOf="@+id/arrow_back"
            android:paddingLeft="20dp"
            android:text="22 авг. 2017"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/date"
            android:layout_alignBottom="@+id/date"
            android:layout_toEndOf="@+id/date"
            android:layout_toRightOf="@+id/date"
            android:paddingLeft="5dp"
            android:text="14:55"
            android:textColor="@color/textBody" />
    </RelativeLayout>

    <EditText
        android:id="@+id/content"
        android:layout_width="365dp"
        android:layout_height="523dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:gravity="top"
        android:hint="Note"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>
